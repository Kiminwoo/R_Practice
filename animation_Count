library(animation)
# 애니메이션 패키지 로딩 , 설치되어 있지 않은 경우에는 
# 설치 해야 한다.
ani.options(interval=1)
# 1초 간격의 애니메이션 시간 설정 
plot.new()
#새로운 그래픽 프레임 생성 
for(i in 10:0) # i의 값은 10~0까지 감소하면서 반복 
{
  rect(0,0,1,1,col="White") 
  #그래픽 출력 영역 지정 (전체 영역 설정 )
  
  size = 11-i 
  # 숫자 출력 크기 i가 10일 때는 1 , 0일 때는 11의 크기로 증가 
  
  text(0.5,0.5,i,cex=size,col=rgb(0,0,1,1))
  #그래픽 출력 영역의 x , y가 각각 0.5 , 0.5인 위치에 숫자 i값 출력 
  
  ani.pause()
  #애니메이션 설정 시간 만큼 대기 
}
